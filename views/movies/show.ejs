<!DOCTYPE html>
<%- include('../partials/navbar.ejs', {
    user: user
    }) %>
                  
                     <!-- Poster Art  -->
                     <div class="movieShowPagePoster">
                        <img src="<%=movie.posterUrl%>">
                    </div> 
                <div class="movieTitle">
                   <%=movie.title%></br>
                </div>
                <div class="movieSynopsis">
                    <span class="movieDetailsFlair"> Synopsis </span></br> <%=movie.synopsis%>
                </div>
                   <div class = "movieDetails">
                        <div>
                           <span>Trailer:</span></br>
                           </div>
                      <span class="movieDetailsFlair"> Shot On:</span> </br><%=movie.shotOn%></br>
                   </br><span class="movieDetailsFlair"> Lenses Used:</span>  <%=movie.lenses%></br>
                   <span class="movieDetailsFlair"> Cast</span> <%=movie.cast%></br>
                   <span class="movieDetailsFlair"> Crew</span>  <%=movie.crew%></br>
                   <span class="movieDetailsFlair"> Aspect Ratio:</span>  <%=movie.aspectRatio%></br>
                   <span class="movieDetailsFlair"> Director:</span>  <%=movie.director%></br>
                   <span class="movieDetailsFlair"> Cinematographer:</span>  <%=movie.dop%></br>
                  
                   <span class="movieDetailsFlair"> Shooting Regions: </span>  <%=movie.shootRegions%></br>
                </div> 
                       
                    

        
        <button class="movieEditBtn">
            <a href="/movies/<%=movie._id%>/edit">+ Update Listing
            </a>
            
        </button>
        <form action="/users/<%=currentUser._id%>?_method=PUT" method="POST">
            <input class="hidden-info" name="newWatchList" value=<%=movie._id%>>
            <input type="submit" value="Add to Watch List">
        </form> 
    </body>
</html>





                       

               