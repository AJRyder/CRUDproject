<html>
  <head>
    <meta charset="utf-8">
    <title></title>
    <link href="https://fonts.googleapis.com/css?family=Bowlby+One+SC|Fredericka+the+Great&display=swap" rel="stylesheet">

    <link rel="stylesheet" type="text/css" href="/css/style.css" />
  </head>
  <body>
    <header>
        

      <div class="nav">
          <div class="nav-header">
            <div class="nav-left shotListTitle">
                <a href="/">Shot List</a> 
            </div>
            
            <div class="nav-center"></div>
            <div class="nav-right">
              <% if(user)  { %> 
                <div class="parallelogram">
                    <h1 class="userGreeting">Hello <%=user.username%></h1>
                </div>
              <div class= "parallelogram2">
              <a class="nav-link"href="/auth/logout">Log Out</a>
              <a class="nav-link" href="/users/">Profiles</a> 
              <a class="nav-link" href="/movies/">Movies</a> 
              <% } else { %> 
              <a href="/auth/register" class="nav-link">Register</a>
              <a href ="/auth/login" class="nav-link">Login</a>
              <% } %>
              </div>
              <div class="hamburger-menu">
                <div class="bar"></div>
                <div class="bar"></div>
                <div class="bar"></div>
              </div>
            </div>
          </div>
        <div class="overlay">
                <% if(user) {%>
            <div class="overlay-content">
              <a href="/users" class="overlay-link">All Users</a>
              <a href="/movies" class="overlay-link">Movies</a>
              <a href="/auth/logout"class="overlay-link">Log Out</a>
            </div>  
                <% } else { %>
            <div class="overlay-content">
              <a href="/auth/register" class="overlay-link">Register</a>
              <a href ="/auth/login" class="overlay-link">Login</a>
                <% } %>
            </div>
        </div>
      </div>
          <script>
            const hamburgerMenu = document.querySelector('.hamburger-menu')
            const overlay = document.querySelector('.overlay')
            hamburgerMenu.addEventListener('click', (e) => {
              e.currentTarget.classList.toggle('open')
              overlay.classList.toggle('show')
            })
          </script>